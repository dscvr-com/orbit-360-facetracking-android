<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    tools:context="com.iam360.views.record.RecorderOverlayFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar1"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@color/manual_grey_transparent"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/toolbar2"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/manual_grey_transparent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"
            android:tint="@color/white"

            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/settings"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/tracking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:scaleType="fitXY"

            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/tracking_on"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar1"
            android:layout_marginTop="6dp" />

        <ImageButton
            android:id="@+id/trackingPoints"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackground"

            android:scaleType="fitXY"
            app:srcCompat="@drawable/points_off"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tracking" />

        <ImageButton
            android:id="@+id/recordingButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/start_photo"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/toolbar2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            android:layout_marginTop="8dp" />

        <ImageButton
            android:id="@+id/changeCamera"
            android:layout_width="47dp"
            android:layout_height="37dp"

            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cameraicon"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.528" />

        <ImageButton
            android:id="@+id/cameraMode"
            android:scaleType="fitXY"
android:background="?android:attr/selectableItemBackground"
            android:layout_width="46dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/camera_mode"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAlignment="center"
            android:textSize="150sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.502"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/toolbar1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/toolbar2"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/trackingGrid"
            android:layout_width="502dp"
            android:layout_height="330dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:srcCompat="@drawable/track_points_grid_landscape"
            app:layout_constraintLeft_toRightOf="@+id/toolbar1"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toLeftOf="@+id/toolbar2"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.727" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
