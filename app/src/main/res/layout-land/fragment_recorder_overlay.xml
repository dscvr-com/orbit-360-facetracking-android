<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    tools:context="com.iam360.views.record.RecorderOverlayFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar1"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@color/manual_grey_transparent" />

        <ImageView
            android:id="@+id/toolbar2"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@color/manual_grey_transparent" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"

            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/settings" />

        <ImageButton
            android:id="@+id/tracking"
            android:layout_width="34dp"
            android:layout_height="34dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tracking_on"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/toolbar1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/trackingPoints"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/toolbar1"
            app:layout_constraintTop_toBottomOf="@+id/tracking"
            app:srcCompat="@drawable/points_off" />

        <ImageButton
            android:id="@+id/recordingButton"
            android:layout_width="60dp"
            android:layout_height="204dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            app:layout_constraintRight_toRightOf="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:srcCompat="@drawable/start_photo"
            app:layout_constraintHorizontal_bias="1.0" />

        <ImageButton
            android:id="@+id/changeCamera"
            android:layout_width="47dp"
            android:layout_height="37dp"

            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/cameraicon"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.528" />


        <TextView
            android:id="@+id/counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="3"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="150sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.502"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/toolbar1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toLeftOf="@+id/toolbar2"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/trackingGrid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintLeft_toRightOf="@+id/toolbar1"
            app:layout_constraintRight_toLeftOf="@+id/toolbar2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/track_points_grid_landscape" />


        <TextView
            android:id="@+id/textMiddelLand"
            android:layout_width="63dp"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:rotation="-90"
            android:text="@string/Photo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.825"
            app:layout_constraintLeft_toRightOf="@+id/counter"
            app:layout_constraintRight_toRightOf="@+id/recordingButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textRightLand"
            android:layout_width="63dp"
            android:layout_height="18dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="8dp"
            android:rotation="-90"
            android:text="@string/Photo"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/textMiddelLand"
            app:layout_constraintHorizontal_bias="0.796"
            app:layout_constraintLeft_toRightOf="@+id/counter"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/textLeftLand"
            android:layout_width="63dp"
            android:layout_height="18dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:rotation="-90"
            android:text="@string/Video"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintHorizontal_bias="0.787"
            app:layout_constraintLeft_toRightOf="@+id/counter"
            app:layout_constraintRight_toRightOf="@+id/toolbar2"
            app:layout_constraintTop_toBottomOf="@+id/textMiddelLand" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
