<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.iam360.views.bluetooth.BluetoothConnectionFragment">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_gravity="left|top"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2" android:layout_gravity="center" android:src="@color/material_grey_800"/>

        <ImageView
                android:layout_width="281dp"
                android:layout_height="470dp"
                android:id="@+id/ConnectionImage" android:layout_gravity="center" android:src="@drawable/signal_grey"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment"
            android:visibility="visible" />

    </FrameLayout>

</FrameLayout>
