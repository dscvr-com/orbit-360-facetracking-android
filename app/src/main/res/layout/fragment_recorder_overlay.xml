<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iam360.views.record.RecorderOverlayFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/toolbar1"
            android:layout_width="382dp"
            android:layout_height="40dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@color/manual_grey_transparent"
            tools:layout_editor_absoluteY="-1dp" />

        <ImageView
            android:id="@+id/toolbar2"
            android:layout_width="409dp"
            android:layout_height="74dp"
            app:srcCompat="@color/manual_grey_transparent"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="566dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="101dp"
            android:layout_height="26dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar1"
            app:layout_constraintRight_toRightOf="@+id/toolbar1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:tint="@color/white"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar1"
            app:layout_constraintRight_toLeftOf="@+id/time"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/settings" />

        <ImageButton
            android:id="@+id/tracking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintRight_toRightOf="@+id/toolbar1"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/tracking_on" />

        <ImageButton
            android:id="@+id/trackingPoints"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintHorizontal_bias="0.928"
            app:layout_constraintLeft_toRightOf="@+id/time"
            app:layout_constraintRight_toLeftOf="@+id/tracking"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/points_off" />

        <ImageButton
            android:id="@+id/recordingButton"
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar2"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/startPhoto" />

        <ImageButton
            android:id="@+id/changeCamera"
            android:layout_width="47dp"
            android:layout_height="37dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/cameraicon" />

        <ImageButton
            android:id="@+id/cameraMode"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintLeft_toLeftOf="@+id/toolbar2"
            app:layout_constraintRight_toLeftOf="@+id/recordingButton"
            app:srcCompat="@drawable/camera_mode" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
